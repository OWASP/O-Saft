HELP-test.misc.todo = search for 'FIXME' and 'TODO' comments in '$(ALL.qa)'
HELP-test.misc.hashbang = get first line of file with '#!' (hashbang) in $(ALL:src)'
testarg-misc_FIXME:
	@echo "#make: search for '# FIXME' in code ..."
	@-grep '# FIXME'            $(ALL.qa)
	@echo ""
testarg-misc_TODO:
	@echo "#make: search for '# TODO' in code ..."
	@-grep '# TODO'             $(ALL.qa)
	@echo ""
testarg-misc_hashbang:
	@echo "#make: search for '#!' (hashbang) in code ..."
	@-egrep '^#\![ /].*/'        $(ALL.src)
	@echo ""
#   # get only  #!/...  and  #! /...  but not  #!#...
